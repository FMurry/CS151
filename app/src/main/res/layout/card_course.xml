<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/course_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/semester_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingBottom="20dp"
            android:paddingLeft="5dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/course_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/semester_text"
            android:layout_centerInParent="true"
            android:layout_marginTop="1dp"
            android:text="@string/course_filler_text"
            android:textColor="@android:color/white"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course_symbol"
            android:layout_centerHorizontal="true"
            android:paddingBottom="30dp"
            android:text="This is a test string"
            android:textColor="@android:color/white"/>

        <RelativeLayout
            android:id="@+id/grades_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/course_name">

            <TextView
                android:id="@+id/grade_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="5dp"
                android:text="N/A"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
